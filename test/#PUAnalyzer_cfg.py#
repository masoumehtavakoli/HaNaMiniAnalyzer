        options.nFilesPerJob = 1 options.output = "out" options.job =
        0

process.PUAnalyzer.sample = theSample.Name
process.PUAnalyzer.LHE.useLHEW = theSample.LHEWeight
process.PUAnalyzer.isData = theSample.IsData

if not ( options.job < theSample.MakeJobs( options.nFilesPerJob ,
    options.output ) ): raise NameError("Job %d is not in the list of
    the jobs of sample %s with %d files per run" % (options.job ,
    options.sample , options.nFilesPerJob ) ) job = theSample.Jobs[
    options.job ]

process.source.fileNames.extend( job.Inputs )
process.TFileService.fileName = job.Output

process.maxEvents.input = options.maxEvents

if theSample.IsData : import FWCore.PythonUtilities.LumiList as
    LumiList # process.source.lumisToProcess =
